@model ProjektLAB.Models.Dane.Cars

@{
    ViewData["Title"] = "Edit";
}


<h2>Edit Car</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="CarId" /> <!-- Hidden field for the car ID -->
    <div>
        <label asp-for="CategoryName">Category:</label>
        <select asp-for="CategoryId" asp-items="@(ViewBag.Categories != null ? new SelectList(ViewBag.Categories, "CategoryId", "CategoryName") : Enumerable.Empty<SelectListItem>())"></select>
    </div>
    <div>
        <label asp-for="Brand">Brand:</label>
        <input asp-for="Brand" />
    </div>
    <div>
        <label asp-for="Model">Model:</label>
        <input asp-for="Model" />
    </div>
    <!-- Add other form fields as needed -->

    <button type="submit">Update Car</button>
</form>
